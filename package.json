{
  "name": "video-sync",
  "productName": "Video Sync",
  "version": "1.0.0",
  "description": "Synchronized video playback system for multiple displays",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "sass": "sass --watch public/scss:public/css",
    "sass:build": "sass public/scss:public/css --style compressed",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "build:mac": "npm run sass:build && electron-builder --mac",
    "build:mac:universal": "npm run sass:build && electron-builder --mac --universal",
    "dist": "npm run sass:build && electron-builder"
  },
  "keywords": [
    "video",
    "sync",
    "playback",
    "websocket"
  ],
  "author": "Pierre R. Balian",
  "license": "MIT",
  "build": {
    "appId": "com.pierrebalian.videosync",
    "productName": "Video Sync",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "dmg": {
      "title": "Video Sync Installer",
      "icon": "build/icon.icns"
    },
    "files": [
      "electron-main.js",
      "server.js",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.6.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.1",
    "sass": "^1.93.2"
  }
}
